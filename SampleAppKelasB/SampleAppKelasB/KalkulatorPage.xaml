<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleAppKelasB.KalkulatorPage" Title="Kalkulator Page">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Masukan Bilangan 1 :" />
            <Entry x:Name="entryBil1" Keyboard="Numeric" />
            <Label Text="Masukan Bilangan 2 :" />
            <Entry x:Name="entryBil2" Keyboard="Numeric" />
            <Label Text="Hasil :" />
            <Entry x:Name="entryHasil" IsEnabled="False" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnSubmit" WidthRequest="80" FontSize="Micro" 
                        Text="Submit" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>