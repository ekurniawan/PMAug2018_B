<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleAppKelasB.AddEmployee" Title="Add Employee">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtEmpName" Placeholder="insert EmpName" />
            <Entry x:Name="txtDesignation" Placeholder="insert Designation" />
            <Entry x:Name="txtDepartment" Placeholder="insert department" />
            <Entry x:Name="txtQualification" Placeholder="insert qualification" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>