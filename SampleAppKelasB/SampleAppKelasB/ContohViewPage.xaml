<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleAppKelasB.ContohViewPage" Title="Contoh View Page">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image Source="xamarinmonkey.png" WidthRequest="120" />
                <Label Text="Usia :" />
                <Slider x:Name="sliderUsia" Minimum="0" Maximum="100" />
                <Entry x:Name="entryNilai" Placeholder="masukan nilai" />
                <Stepper x:Name="stepperNilai" Minimum="0" Maximum="100" Increment="1" />
                <Label Text="Apakah anda setuju dengan term of condition ini?" />
                <Label Text="Tanggal :"/>
                <DatePicker x:Name="dpTanggal" Format="D" />
                <Switch x:Name="switchAgree" IsToggled="False" />
                <StackLayout Orientation="Horizontal">
                    <Button x:Name="btnGetValue" Text="Get Value" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>